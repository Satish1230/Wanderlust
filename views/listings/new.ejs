<% layout('layouts/boilerplate') %>

    <body>
        <h3>Create a new Listing</h3>
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required />
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <!-- Fixed typo in label tag from <lable> to <label> -->
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
                <!-- Fixed typo in label tag from <lable> to <label> -->
                <label for="image" class="form-label">Upload image</label>
                <input name="listing[image]" type="file" class="form-control">
            </div>

            <div class="mb-3">
                <!-- Fixed typo in label tag from <lable> to <label> -->
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Enter price" type="number" class="form-control" required>
                <div class="invalid-feedback">
                    Please select a valid price.
                </div>
            </div>

            <div class="mb-3">
                <!-- Fixed typo in label tag from <lable> to <label> -->
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Please select a valid country.
                </div>
            </div>

            <div class="mb-3">
                <!-- Fixed typo in label tag from <lable> to <label> -->
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    Please select a valid location.
                </div>
            </div>

            <!-- Changed class="btn btn-dark" to type="submit" for the button -->
            <button type="submit" class="btn btn-dark">Add</button>
        </form>